{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "./scheme.json",
	"title": "Manifest Schema",
	"type": "object",
	"properties": {
		"manifests": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"description": "The name of the application or project",
						"type": "string"
					},
					"repo": {
						"description": "Github repo source of the mod",
						"type": "string",
						"pattern": "^[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+$"
					}
				},
				"required": [
					"name",
					"repo"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"manifests"
	],
	"additionalProperties": false
}